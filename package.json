{
  "name": "stackdock",
  "version": "0.1.0",
  "private": true,
  "description": "Open-source multi-cloud management platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/stackdock/stackdock.git"
  },
  "license": "MIT",
  "author": "StackDock Team",
  "trademark": "StackDockâ„¢ is a trademark with an intent-to-use application filed in October 2025. See TRADEMARK.md for usage policy.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:marketing": "npm run dev --workspace=apps/marketing",
    "dev:docs": "npm run dev --workspace=apps/docs",
    "dev:all": "turbo run dev",
    "dev:convex": "npx convex dev",
    "build": "turbo run build",
    "build:marketing": "npm run build --workspace=apps/marketing",
    "build:docs": "npm run build --workspace=apps/docs",
    "lint": "npm run type-check --workspace=apps/web",
    "lint:marketing": "npm run lint --workspace=apps/marketing",
    "lint:docs": "npm run lint --workspace=apps/docs",
    "type-check": "npm run type-check --workspaces",
    "test": "echo \"No test suite configured yet.\"",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "npx rimraf node_modules apps/web/node_modules apps/marketing/node_modules apps/docs/node_modules",
    "pipeline": "bash scripts/pipeline/run-all-checks.sh",
    "pipeline:lint": "bash scripts/pipeline/lint-type-check.sh",
    "pipeline:test": "bash scripts/pipeline/vitest-unit.sh",
    "pipeline:e2e": "bash scripts/pipeline/playwright-e2e.sh",
    "pipeline:security": "bash scripts/pipeline/security-scan.sh",
    "pipeline:build": "bash scripts/pipeline/build-verify.sh"
  },
  "devDependencies": {
    "@octokit/rest": "^20.0.0",
    "@types/node": "^20.0.0",
    "convex": "^1.28.0",
    "esbuild": "^0.25.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.2.0",
    "vitest": "^3.0.5"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6"
  },
  "overrides": {
    "js-yaml": "^4.1.1",
    "xmlbuilder2": {
      "js-yaml": "^4.1.1"
    }
  },
  "optionalDependencies": {
    "@sentry/browser": "^8.55.0",
    "@sentry/react": "^8.55.0"
  }
}
